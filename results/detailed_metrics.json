  "metric_definitions": {
    "exact_match_rate": {
      "formula": "count(predicted == ground_truth) / total_samples",
      "interpretation": "Strict accuracy - entire VIN must be correct"
    },
    "f1_score": {
      "formula": "2 * (precision * recall) / (precision + recall)",
      "interpretation": "Balanced measure of precision and recall"
    },
    "precision": {
      "formula": "correct_chars / predicted_chars",
      "interpretation": "How many predicted characters are correct"
    },
    "recall": {
      "formula": "correct_chars / ground_truth_chars",
      "interpretation": "How many ground truth characters were found"
    },
    "character_error_rate": {
      "formula": "levenshtein_distance(pred, gt) / len(gt)",
      "interpretation": "Normalized edit distance (lower is better)"
    },
    "word_error_rate": {
      "formula": "count(any_error) / total_samples",
      "interpretation": "Percentage of samples with any error"
    }
  },
